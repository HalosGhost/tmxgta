VERSION=0.5
echo -e "\nVersion: $VERSION"
echo -n 'Based on archiso: '
cat /proc/cmdline | cut -d\  -f 2 | cut -d\= -f 2
echo -n 'Kernel: '
uname -r
sleep 4
tput cols > /tmp/tputout
clear
tmux new-session -d -s tmxgta "~/tmxgta_$VERSION $1 $2"
tmux set-option -g prefix C-a
tmux bind-key C-a select-pane -L
tmux set-option -g pane-active-border-bg black
tmux set-option -g pane-active-border-fg blue
tmux set-option -g pane-border-bg black
tmux set-option -g pane-border-fg blue
tmux set-option -g status-left-length 32
tmux set-option -g status-bg blue
tmux set-option -g status-fg white
tmux set-option -g status-left "Arch Linux"
tmux split-window -h
tmux select-pane -t 1
tmux swap-pane -s 1 -t 0
tmux -2 attach-session -t tmxgta
